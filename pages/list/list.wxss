
.date-item {
	display: flex;
	align-items: center;
	height: 150rpx;
	margin: 0 40rpx;
	/* 设置下划线 */
	border-bottom: 1px solid rgba(0, 0, 0, .1);
}

.day {
	opacity: .8;
	font-size: 40rpx;
	line-height: 56rpx;
}

.date {
	opacity: .5;
	font-size: 25rpx;
	line-height: 35rpx;
}

.temp {
	flex-grow: 1;
	padding-right: 60rpx;
	text-align: center;
	opacity: .8;
	font-size: 40rpx;
	line-height: 56rpx;
}

.weather-icon {
	width: 90rpx;
	height: 90rpx;
}

/* 取消最后一个item下划线 */
.date-item:last-child {
	border-bottom: none;
}
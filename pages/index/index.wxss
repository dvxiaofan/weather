
.temp {
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
  background-image: '../../images/sunny-bg.png';
}

.weather {
  font-size: 40rpx;
  line-height: 56rpx;
  text-align: center;
  opacity: 0.8;
}
/* width: 750rpx, height: 760rpx,
 * 760 = 20 + 154 + 280 + 56 + 250 */
.weather-wrapper {
  padding-top: 20rpx;
  padding-bottom: 250rpx;
  position: relative;
}

/* 154 = 42 + 10 + 42 + 60 */
.location-wrapper {
  margin-bottom: 60rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, .5);
}

.location {
  display: flex;
  justify-content: center;
  align-items: center;
}

.location-icon {
  margin-right: 10rpx;
  width: 21rpx;
  height: 30rpx;
}

.location-tips {
  margin-right: 10rpx;
  text-align: center;
}

.weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

/* 今天的天气详情 */
.day-weather {
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 40rpx;
  border-top: 1px solid rgba(0, 0, 0, .1);
  height: 90rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, .5);
}

.temp-text {
  flex-grow: 1;
  padding-right: 30rpx;
  text-align: right;
}

.arrow-icon {
  width: 13rpx;
  height: 24rpx;
}

.futureWeather {
  display: inline;
}

.futureIcon {
  width: 22rpx;
  height: 22rpx;
}

.timestips {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 45rpx;
}

.timestips-icon {
  margin-right: 10rpx;
  width: 36rpx;
  height: 28rpx;
}

.timestips-text {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: .5;
}

.forecast-list {
  display: flex;

}

.forecast-item {
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  align-items: center;

  width: 125rpx;
}

.forecast-time {
  font-size: 30rpx;
  line-height: 42rpx;
}

.forecast-weather {
  margin-top: 50rpx;
  width: 60rpx;
  height: 60rpx;
}

.forecast-temp {
  margin-top: 46rpx;
  font-size: 40rpx;
  line-height: 56rpx;
} 
